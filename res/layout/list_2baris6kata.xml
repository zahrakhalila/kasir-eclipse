<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >
    	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="0px">                

        	<TextView
        	    android:id="@+id/namabrg"
        	    android:layout_width="100sp"
        	    android:layout_height="wrap_content"
        	    android:gravity="left"
        	    android:text="Nama"
        	    android:textColor="#dc6800"
        	    android:textSize="15sp"
        	    android:textStyle="bold" />

        	<TextView
        	    android:id="@+id/kodebrg"
        	    android:layout_width="120sp"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@+id/namabrg"
        	    android:gravity="right"
        	    android:text="Host"
        	    android:textColor="#0000ff"
        	    android:textSize="15sp" />
	
        	<TextView
        	    android:id="@+id/databaseserver"
        	    android:layout_width="100sp"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@+id/kodebrg"
        	    android:gravity="right"
        	    android:text="Database"
        	    android:textColor="#ff00ff"
        	    android:textSize="15sp" />

        </RelativeLayout>
        
    	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="0px">           		

        	<TextView
        	    android:id="@+id/hargabeli"
        	    android:layout_width="100sp"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentLeft="true"
        	    android:gravity="left"
        	    android:text="Login"
        	    android:textColor="#000000"
        	    android:textSize="15sp" />

        	<TextView
        	    android:id="@+id/passwordserver"
        	    android:layout_width="120sp"
        	    android:layout_height="wrap_content"
         	    android:layout_toRightOf="@+id/hargabeli"
        	    android:gravity="right"
        	    android:text="Password"
        	    android:textColor="#ff00ff"
        	    android:textSize="15sp" />

        	<TextView
        	    android:id="@+id/jenisserver"
        	    android:layout_width="50sp"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@+id/passwordserver"
        	    android:gravity="right"
        	    android:text="jenis"
        	    android:textColor="#0000ff"
        	    android:textSize="15sp" />

        	<TextView
        	    android:id="@+id/hargajual2"
        	    android:layout_width="50sp"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@+id/jenisserver"
        	    android:gravity="right"
        	    android:text="Port"
        	    android:textColor="#ff0000"
        	    android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>